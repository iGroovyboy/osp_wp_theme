#home .hero
    position: relative
    background-color: $dark-bg
    color white
    padding 0
    height: 620px
    .text
        text-shadow: 0px 2px 2px black

    h5.kafedra
        font-family $font-big
        margin: 0
        padding 190px 0 0 0
        text-transform uppercase
        font-size 1.35em
        line-height 1em
        letter-spacing 2.9em
        text-indent: 2.8em

    h5.obv
        margin -20px 0 0 0
        padding 0 0 0 0
        text-transform uppercase
        font-size 14em
        line-height 1em
        font-family $font-regular

    h1.kafedra-fullname
        text-transform: uppercase;
        margin 0
        font-size 1.35em
        line-height 1em
        word-spacing 0.45em
        margin-top -0.5em
        letter-spacing 0.03em

    .buttons
        padding 100px 0 0 0

    .bg
        width 100%
        height 100%
        overflow: hidden
        position: absolute
        background-image url("../img/heroimage2.jpg");
        background-position top center
        background-attachment fixed
        background-repeat no-repeat

        .colored-overlay
            width 100%
            height 100%
            background-color: $dark-bg
            position: absolute
            opacity 0.8
            transition: 2s opacity ease-in
            &:hover, &:focus
                opacity 0

        .clouds
            pointer-events: none
            width 300%
            height 200%
            background-image url("../img/clouds.png")
            background-size contain
            background-repeat repeat-x
            opacity 0.1
            top: -50%
            position: absolute
            animation: movingclouds 45s linear infinite

@keyframes movingclouds
	0%
        margin-left 0%
        opacity 0
    5%
        margin-left -5%
        opacity 0
    10%
        margin-left -10%
        opacity 0.05
    70%
        margin-left -70%
        opacity 0.15
	100%
        margin-left -100%
        opacity 0

.stats
    list-style-type none
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    justify-content space-evenly
    width 100%

    li
        width 300px

    .stats-number
        font-size 3em
        font-family $font-big
        color $active
    .stats-descr
        font-size 1.3em

.team
    li
        list-style-type none
        margin 0
